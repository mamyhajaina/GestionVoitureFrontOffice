@{
    ViewData["Title"] = "Accueil";
}

<main class="main">

    <!-- Hero Section -->
    <section id="hero" class="hero section dark-background">

        <!-- Image de fond -->
        <img src="~/assets/img/world-dotted-map.png" alt="Carte du monde" class="hero-bg" data-aos="fade-in">

        <div class="container">
            <div class="row gy-4 d-flex justify-content-between">

                <!-- Contenu principal -->
                <div class="col-lg-6 order-2 order-lg-1 d-flex flex-column justify-content-center">
                    <h2 data-aos="fade-up">Votre Partenaire de Location de Véhicules</h2>
                    <p data-aos="fade-up" data-aos-delay="100">
                        Réservez facilement le véhicule adapté à vos besoins. Que ce soit pour un voyage, un déménagement ou une
                        utilisation professionnelle, nous avons ce qu’il vous faut.
                    </p>

                    <!-- Formulaire de recherche -->
                    <form action="#" class="form-search d-flex align-items-stretch mb-3" data-aos="fade-up"
                          data-aos-delay="200">
                        <input type="text" class="form-control" placeholder="Destination ou Ville. Exemple : Antananarivo">
                        <button type="submit" class="btn btn-primary">Rechercher</button>
                    </form>

                    <!-- Statistiques -->
                    <div class="row gy-4" data-aos="fade-up" data-aos-delay="300">

                        <div class="col-lg-3 col-6">
                            <div class="stats-item text-center w-100 h-100">
                                <span data-purecounter-start="0" data-purecounter-end="500" data-purecounter-duration="1"
                                      class="purecounter">500</span>
                                <p>Clients Satisfaits</p>
                            </div>
                        </div><!-- Fin Statistique -->

                        <div class="col-lg-3 col-6">
                            <div class="stats-item text-center w-100 h-100">
                                <span data-purecounter-start="0" data-purecounter-end="150" data-purecounter-duration="1"
                                      class="purecounter">150</span>
                                <p>Véhicules Disponibles</p>
                            </div>
                        </div><!-- Fin Statistique -->

                        <div class="col-lg-3 col-6">
                            <div class="stats-item text-center w-100 h-100">
                                <span data-purecounter-start="0" data-purecounter-end="250" data-purecounter-duration="1"
                                      class="purecounter">250</span>
                                <p>Réservations Terminées</p>
                            </div>
                        </div><!-- Fin Statistique -->

                        <div class="col-lg-3 col-6">
                            <div class="stats-item text-center w-100 h-100">
                                <span data-purecounter-start="0" data-purecounter-end="50" data-purecounter-duration="1"
                                      class="purecounter">50</span>
                                <p>Villes Couvertes</p>
                            </div>
                        </div><!-- Fin Statistique -->

                    </div>

                </div>

                <!-- Image d'illustration -->
                <div class="col-lg-5 order-1 order-lg-2 hero-img" data-aos="zoom-out">
                    <img src="~/assets/img/hero-img.svg" class="img-fluid mb-3 mb-lg-0" alt="Location de véhicules">
                </div>

            </div>
        </div>

    </section><!-- /Section Hero -->
    <!-- Section Services Vedettes -->
    <section id="featured-services" class="featured-services section">

        <div class="container">

            <div class="row gy-4">

                <!-- Service 1 : Large Gamme de Véhicules -->
                <div class="col-lg-4 col-md-6 service-item d-flex" data-aos="fade-up" data-aos-delay="100">
                    <div class="icon flex-shrink-0"><i class="fa-solid fa-car"></i></div>
                    <div>
                        <h4 class="title">Large Gamme de Véhicules</h4>
                        <p class="description">
                            Découvrez notre flotte complète : voitures économiques, berlines, SUV, 4x4 et minibus pour tous vos
                            besoins.
                        </p>
                        <a href="#" class="readmore stretched-link">
                            <span>En Savoir Plus</span><i class="bi bi-arrow-right"></i>
                        </a>
                    </div>
                </div><!-- Fin Service Item -->
                <!-- Service 2 : Réservation Simplifiée -->
                <div class="col-lg-4 col-md-6 service-item d-flex" data-aos="fade-up" data-aos-delay="200">
                    <div class="icon flex-shrink-0"><i class="fa-solid fa-calendar-check"></i></div>
                    <div>
                        <h4 class="title">Réservation Simplifiée</h4>
                        <p class="description">
                            Réservez en quelques clics via notre plateforme intuitive et sécurisée. Profitez de flexibilité totale.
                        </p>
                        <a href="#" class="readmore stretched-link">
                            <span>En Savoir Plus</span><i class="bi bi-arrow-right"></i>
                        </a>
                    </div>
                </div><!-- Fin Service Item -->
                <!-- Service 3 : Assistance 24/7 -->
                <div class="col-lg-4 col-md-6 service-item d-flex" data-aos="fade-up" data-aos-delay="300">
                    <div class="icon flex-shrink-0"><i class="fa-solid fa-headset"></i></div>
                    <div>
                        <h4 class="title">Assistance 24/7</h4>
                        <p class="description">
                            Profitez d'une assistance client disponible 24h/24 et 7j/7 pour répondre à toutes vos questions.
                        </p>
                        <a href="#" class="readmore stretched-link">
                            <span>En Savoir Plus</span><i class="bi bi-arrow-right"></i>
                        </a>
                    </div>
                </div><!-- Fin Service Item -->

            </div>

        </div>

    </section><!-- /Section Services Vedettes -->
    <!-- Section À Propos -->
    <section id="about" class="about section">

        <div class="container">

            <div class="row gy-4">

                <!-- Image et Vidéo -->
                <div class="col-lg-6 position-relative align-self-start order-lg-last order-first" data-aos="fade-up"
                     data-aos-delay="200">
                    <img src="~/assets/img/about.jpg" class="img-fluid" alt="À propos de notre service">
                    <a href="https://www.youtube.com/watch?v=Y7f98aduVJ8" class="glightbox pulsating-play-btn"
                       title="Découvrez-nous"></a>
                </div>

                <!-- Contenu texte -->
                <div class="col-lg-6 content order-last order-lg-first" data-aos="fade-up" data-aos-delay="100">
                    <h3>Qui sommes-nous ?</h3>
                    <p>
                        Nous sommes une agence spécialisée dans la **location de voitures** et les **tours personnalisés** à
                        travers Madagascar.
                        Notre mission est de vous offrir une **expérience unique**, alliant confort, sécurité et découvertes
                        inoubliables.
                    </p>
                    <ul>
                        <li>
                            <i class="bi bi-diagram-3"></i>
                            <div>
                                <h5>Un large choix de véhicules</h5>
                                <p>
                                    Des voitures économiques aux 4x4 robustes pour explorer les routes les plus exigeantes de
                                    Madagascar.
                                </p>
                            </div>
                        </li>
                        <li>
                            <i class="bi bi-fullscreen-exit"></i>
                            <div>
                                <h5>Services personnalisés</h5>
                                <p>Réservation flexible, chauffeurs professionnels et itinéraires adaptés à vos besoins.</p>
                            </div>
                        </li>
                        <li>
                            <i class="bi bi-broadcast"></i>
                            <div>
                                <h5>Assistance 24h/24</h5>
                                <p>Une équipe disponible pour vous accompagner tout au long de votre aventure sur la Grande Île.</p>
                            </div>
                        </li>
                    </ul>
                </div>

            </div>

        </div>

    </section><!-- /Section À Propos -->
    <!-- Section Services -->
    <section id="services" class="services section">

        <!-- Titre de la section -->
        <div class="container section-title" data-aos="fade-up">
            <span>Nos Services<br></span>
            <h2>Nos Services</h2>
            <p>Découvrez nos services de location de véhicules et de tourisme personnalisés pour explorer Madagascar</p>
        </div><!-- Fin du titre de la section -->

        <div class="container">

            <div class="row gy-4">

                <!-- Service 1: Location de voiture -->
                <div class="col-lg-4 col-md-6" data-aos="fade-up" data-aos-delay="100">
                    <div class="card">
                        <div class="card-img">
                            <img src="~/assets/img/service-1.jpg" alt="Location de voiture" class="img-fluid">
                        </div>
                        <h3>Location de Voitures</h3>
                        <p>
                            Nous proposons une large gamme de véhicules pour tous vos besoins : voitures économiques, SUV, et 4x4
                            pour explorer l'île.
                        </p>
                    </div>
                </div><!-- Fin du service de location de voiture -->
                <!-- Service 2: Tours guidés -->
                <div class="col-lg-4 col-md-6" data-aos="fade-up" data-aos-delay="200">
                    <div class="card">
                        <div class="card-img">
                            <img src="~/assets/img/service-2.jpg" alt="Tours guidés" class="img-fluid">
                        </div>
                        <h3><a href="#" class="stretched-link">Tours Guidés</a></h3>
                        <p>
                            Profitez de circuits personnalisés à travers les plus belles régions de Madagascar, accompagnés de
                            guides expérimentés.
                        </p>
                    </div>
                </div><!-- Fin des tours guidés -->
                <!-- Service 3: Transports privés -->
                <div class="col-lg-4 col-md-6" data-aos="fade-up" data-aos-delay="300">
                    <div class="card">
                        <div class="card-img">
                            <img src="~/assets/img/service-3.jpg" alt="Transports privés" class="img-fluid">
                        </div>
                        <h3><a href="#" class="stretched-link">Transports Privés</a></h3>
                        <p>
                            Des services de transport privé pour vous et votre groupe avec des chauffeurs professionnels pour un
                            voyage confortable.
                        </p>
                    </div>
                </div><!-- Fin des transports privés -->
                <!-- Service 4: Chauffeurs à disposition -->
                <div class="col-lg-4 col-md-6" data-aos="fade-up" data-aos-delay="400">
                    <div class="card">
                        <div class="card-img">
                            <img src="~/assets/img/service-4.jpg" alt="Chauffeurs à disposition" class="img-fluid">
                        </div>
                        <h3><a href="#" class="stretched-link">Chauffeurs à Disposition</a></h3>
                        <p>
                            Nous mettons à votre disposition des chauffeurs expérimentés pour vous accompagner durant vos
                            déplacements en toute sécurité.
                        </p>
                    </div>
                </div><!-- Fin des chauffeurs à disposition -->
                <!-- Service 5: Livraison de véhicules -->
                <div class="col-lg-4 col-md-6" data-aos="fade-up" data-aos-delay="500">
                    <div class="card">
                        <div class="card-img">
                            <img src="~/assets/img/service-5.jpg" alt="Livraison de véhicules" class="img-fluid">
                        </div>
                        <h3>Livraison de Véhicules</h3>
                        <p>
                            Faites-vous livrer votre véhicule directement à l'endroit de votre choix à Madagascar, pour plus de
                            confort et de flexibilité.
                        </p>
                    </div>
                </div><!-- Fin de la livraison de véhicules -->
                <!-- Service 6: Assurances et Assistance -->
                <div class="col-lg-4 col-md-6" data-aos="fade-up" data-aos-delay="600">
                    <div class="card">
                        <div class="card-img">
                            <img src="~/assets/img/service-6.jpg" alt="Assurances et Assistance" class="img-fluid">
                        </div>
                        <h3><a href="#" class="stretched-link">Assurances et Assistance</a></h3>
                        <p>
                            Bénéficiez d'assurances et d'une assistance 24/7 pour garantir votre tranquillité d'esprit pendant vos
                            voyages à Madagascar.
                        </p>
                    </div>
                </div><!-- Fin des assurances et assistance -->

            </div>

        </div>

    </section><!-- /Section Services -->

</main>